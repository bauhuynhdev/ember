<div class="jumbotron">
  <div class="container">
    <h4>Total payments sent: <span class="label label-info">{{model.paymentsTotal}}</span></h4>
<!--	<h4>Total coins paid: <span class="label label-info">{{format-balance model.stats.paid}}</span></h4> -->
  </div>
</div>
<div class="container">
  {{#if model.payments}}
  <h4>Recent payments</h4>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Time</th>
        <th>Amount</th>
        <th>Address</th>
        <th>Tx ID</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.payments as |tx|}}
        <tr>
          <td>{{format-date-locale tx.timestamp}}</td>
          <td>{{format-balance tx.amount}}</td>
          <td>
            <a href="https://pirl.site/addr/{{tx.address}}" class="hash" rel="nofollow" target="_blank">{{tx.address}}</a>
          </td>
          <td>
            <a href="https://pirl.site/tx/{{tx.tx}}" class="hash" rel="nofollow" target="_blank">{{format-tx tx.tx}}</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <h3>No payments have been made yet. </h3>
  <h3><strong>Update: We were successfully for first payment! Thank you for staying tuned!</strong></h3>
  {{/if}}
</div>