{{#if model.matured}}
<h4>Confirmed blocks</h4>
<div class="table-responsive">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
		  <th>Height</th>
		  <th>Block Hash</th>
		  <th>Time Found</th>
		  <th>Variance</th>
		  <th>Received</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.matured as |block|}}
        {{partial "blocks/block"}}
      {{/each}}
    </tbody>
  </table>
</div>
{{else}}
<h3>No confirmed blocks yet</h3>
{{/if}}
